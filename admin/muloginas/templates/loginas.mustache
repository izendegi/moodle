{{!
    @template tool_muloginas/loginas

    Show "Log in as via Incognito window" on the user profile page.

    Context variables required for this template:
    * targetuserid - Log-in-as target user
    * targetuser - target user name

    Example context (json):
    {
        "targetuserid": "111",
        "targetuser": "John Doe"
    }
}}
<button class="btn btn-link m-0 p-0" id="tool_muloginas_loginas">{{#str}}loginas,tool_muloginas{{/str}}</button>

{{#js}}
require(['tool_muloginas/popup'],
    function(Popup) {
        Popup.init({
            targetuserid: {{targetuserid}},
            targetuser: '{{targetuser}}',
            uniqueid: 'tool_muloginas_loginas'
        });
    }
);
{{/js}}
