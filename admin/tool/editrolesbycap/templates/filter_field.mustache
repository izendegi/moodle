{{!
    @template tool_editrolesbycap/filter_field

    Filter input fields

    Context variables required for this template:
    * id - the search field id
    * clearbuttonid - clear button id
    * value - current value of the search field

    Example context (json):
    {
        "id": "id_capcapabilitysearch",
        "clearbuttonid": "id_capclearcapability",
        "value": "Block"
    }
}}
<div class="capabilitysearchui form-inline mt-1 mx-auto w-100">
   <label for="{{id}}"> {{#str}} filter, moodle {{/str}}</label>
   <input type="text" id="{{id}}" class="form-control" value="{{value}}">
   <input type="button" id="{{clearbuttonid}}" value="{{#str}} clear, moodle {{/str}}">
</div>
