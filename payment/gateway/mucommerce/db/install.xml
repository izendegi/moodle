<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="payment/gateway/mucommerce/db" VERSION="20201216" COMMENT="XMLDB file for Mucommerce payment gateway plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="paygw_mucommerce" COMMENT="Stores Mucommerce related information">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="component" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="paymentarea" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="itemid" TYPE="int" LENGTH="19" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="environment" TYPE="char" LENGTH="12" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="mucom_orderid" TYPE="int" LENGTH="19" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="is_paid" TYPE="char" LENGTH="1" NOTNULL="true" DEFAULT="E" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="itemid" TYPE="foreign" FIELDS="itemid" REFTABLE="enrol" REFFIELDS="id"/>
        <KEY NAME="linkid" TYPE="unique" FIELDS="courseid,userid,mucom_orderid"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
