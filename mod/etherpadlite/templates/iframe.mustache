{{!
    @template mod_etherpadlite/iframe

    Displays etherpad iframe on boost based themes

    Example context (json):
    {
        "id" : 1,
        "minwidth" : "400px",
        "emptyurl" : "https://example.com"
    }

}}

<div class="embed-responsive" style="height:500px;min-width:{{minwidth}};">
        <iframe class="border embed-responsive-item h-100" id="etherpadiframe_{{id}}" src=""
                allow="camera https://etherpad.mondragon.edu; microphone https://etherpad.mondragon.edu;
                display-capture https://etherpad.mondragon.edu">
        </iframe>
</div>
