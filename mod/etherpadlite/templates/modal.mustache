{{!
    @template mod_etherpadlite/modal

    Displays the modal dialog with the etherpad iframe

    Example context (json):
    {
        "id"        : 1,
        "name"      : "Test pad",
        "courseurl" : "https://example.com/course/view.php?id=2"
    }

}}

<div class="etherpadmodal modal fade}" id="etherpadmodal_{{id}}">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h3 class="d-flex justify-content-between mt-1 w-100">
                    <button type="button" class="close-button btn btn-primary" data-bs-dismiss="modal" title="{{#str}}restorewindowsize, mod_etherpadlite{{/str}}" >
                        <i class="fa fa-compress fa-lg" aria-hidden="true"></i>
                    </button>
                    <span class="ms-2 flex-grow-1">{{name}}</span>
                    {{> mod_etherpadlite/closebutton }}
                </h3>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <iframe class="border" id="etherpadiframe2_{{id}}" src="" allowFullscreen 
                        allow="camera https://etherpad.mondragon.edu; microphone https://etherpad.mondragon.edu;
                        display-capture https://etherpad.mondragon.edu">>
                </iframe>
            </div>

        </div>
    </div>
</div>
