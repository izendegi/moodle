{{!
    @template mod_etherpadlite/urlsettingsnote

    Displays etherpad content

    Example context (json):
    {
        "msg"     : "Description of something",
        "msginfo" : "Additional info",
        "msgtype" : "warning",
        "icon"    : "exclamation-triangle"
    }

}}

<div class="d-flex flex-column">
    <span>{{urlinfo}}</span>
    {{#blockingmsg}}
        <div class="text-{{blockingtextclass}}">
            <span><i class="fa {{blockingicon}} me-2"></i></span>
            <span>{{{.}}}</span>
        </div>
    {{/blockingmsg}}

    <div class="border rounded border-{{connectiontextclass}} text-{{connectiontextclass}} p-1">
        <span><i class="fa {{connectionicon}} me-2"></i></span>
        <span><strong>{{connectiontext}}</strong></span>
        <span>{{connectiontextreason}}</span>
    </div>

</div>
