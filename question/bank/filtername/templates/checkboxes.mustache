{{!
    @template qbank_filtername/checkboxes

    Example context (json):
    {
        "filtertext": "checked attribute",
        "casesensitive": "checked attribute"
    }
}}
<label class="d-flex flex-md-row align-items-md-center m-0 ml-1">
    <input class="mr-1" type="checkbox" name="filtername-filtertext"{{#filtertext}} checked{{/filtertext}}>
    {{#str}}filterquestiontext, qbank_filtername{{/str}}
</label>

<label class="d-flex flex-md-row align-items-md-center m-0 ml-2">
    <input class="mr-1" type="checkbox" name="filtername-casesensitive"{{#casesensitive}} checked{{/casesensitive}}>
    {{#str}}casesensitive, qbank_filtername{{/str}}
</label>
